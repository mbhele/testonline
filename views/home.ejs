<script>
   function toggleMenu() {
    var navbar = document.getElementById("myNavbar");
    var links = navbar.querySelector(".navbar-links");
    var buttons = navbar.querySelector(".navbar-buttons");
    var displayStyle = links.style.display;

    // Check if the elements are already displayed.
    if (displayStyle === "flex") {
        // If so, hide them.
        links.style.display = "none";
        buttons.style.display = "none";
    } else {
        // Otherwise, show them.
        links.style.display = "flex";
        buttons.style.display = "flex";
        // Ensure they stack vertically on smaller screens.
        links.style.flexDirection = "column";
        buttons.style.flexDirection = "column";
        // Align items to the start for a full-width effect.
        links.style.alignItems = "flex-start";
        buttons.style.alignItems = "flex-start";
    }
}

